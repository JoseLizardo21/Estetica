                    <td>{{productName}}</td>
                    <td>{{category}}</td>
                    <td>{{brand}}</td>
                    <td>S/ {{price}}</td>
                    <td>{{currentStock}}</td>
                    <td>
                        <a href="/stock/increaseProduct/{{id}}">
