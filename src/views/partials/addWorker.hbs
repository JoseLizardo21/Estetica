                    <select class="form-select inputsAddUser" aria-label="Default select example" name="id_tipo_Trabajador">
                        <option value="2">Administrador</option>
                        <option value="3" selected>Trabajador</option>
                    </select>
                </div>
                <div class="px-3">
                    <label for="direccion" class="form-label">Direccion:</label>
                    <input type="Text" name="direccion" id="direccion" class="form-control inputsAddUser" required>
                </div>
                <div class="px-3">
                    <label for="fechaNacimiento" class="form-label">Fecha de nacimiento:</label>
                    <input type="Text" name="fecha_nacimiento" id="fechaNacimiento" class="form-control inputsAddUser" required>
                </div>
                <div class="px-3 mt-4 d-flex justify-content-center">
                    <button class="text-white fw-bold btnAddUser btn w-75">CREAR USUARIO</button>
                </div>
            </div>
        </form>
        <div class="col ctnImgAddUser">
            <div class="w-100 h-100 filtroImgAddUser"></div>
        </div>
    </div>
