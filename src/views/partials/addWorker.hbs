                    <label for="username" class="form-label">Nombres:</label>
                    <input type="Text" name="nombres" id="username" class="form-control inputsAddUser" required>
                </div>
                <div class="px-3">
                    <label for="apellidos" class="form-label">Apellidos:</label>
                    <input type="Text" name="apellidos" id="apellidos" class="form-control inputsAddUser" required>
                </div>
                <div class="px-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="Email" name="email" id="email" class="form-control inputsAddUser" required>
