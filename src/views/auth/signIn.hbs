<link rel="stylesheet" href="/styles/StylesSignIn/signIn.css">
<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh;">

    <div class="col-md-7 col-11 shadow cardFormSignIn">
        <div class="row">
            <div class="col p-3">
                <img src="/imgs/icons/LogoItsBoss.png" class="w-100">
                <form action="/signin" method="post" class="mt-3 d-flex justify-content-center">
                    <div class="w-75 ctnInputsSignIn">
                        <label for="username" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="username" name="username" required>

                        <label for="password" class="form-label mt-3">Contraseña:</label>
                        <input type="password" class="form-control" name="password" required>
                        <div class="d-flex justify-content-center mt-4">
                            <button class="btnSignIn mt-4 mb-5">Iniciar sesión</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col colImgSignIn">
            </div>
        </div>
    </div>
</div>